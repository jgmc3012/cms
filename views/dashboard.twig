{% extends "layout.twig" %}
  {% block head_content %}
    <title> Tablero {{ session_user.name_rol }}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <style>
      html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
    </style>
  {% endblock %}

  {% block body_content %}
    <!-- Top container -->
    <div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
      <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i>  Menu</button>
      <span class="w3-bar-item w3-right">Sistema Manejador de Contenidos</span>
    </div>

    <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar"><br>
      <div class="w3-container w3-row">
        <div class="w3-col s4">
          <img src="{{ session_user.avatar }}" class="w3-circle w3-margin-right" style="width:60px">
        </div>
        <div class="w3-col s8 w3-bar">
          <span>Bienvenido, <strong>{{ session_user.first_name }}</strong></span><br>
          <a href="/logout-cms" class="w3-bar-item w3-button"><i class="fa fa-close w3-large"> Cerrar sesión</i></a>
        </div>
      </div>
      <hr>
      <div class="w 3-container w3-black">
        <h5 class="w3-center">Tablero</h5>
      </div>
      <div class="w3-bar-block">
        <a href="/dashboard/overview" class="w3-bar-item w3-button w3-padding w3-dark-grey"><i class="fa fa-home fa-fw"></i>  Vista General</a>
        <a href="/dashboard/post" class="w3-bar-item w3-button w3-padding"><i class="fa fa-cog fa-fw"></i>  Publicaciones</a>
        {% if session_user.id_rol <= 2 %}
          <a href="/dashboard/users" class="w3-bar-item w3-button w3-padding"><i class="fa fa-users fa-fw"></i>  Usuarios</a>
          <a href="/dashboard/category" class="w3-bar-item w3-button w3-padding"><i class="fa fa-folder fa-fw"></i>Categorias</a>
        {% endif %}
        <a href="#" class="w3-bar-item w3-button w3-padding"><i class="fa fa-cog fa-fw"></i>  Configuracion</a><br><br>
      </div>
    </nav>

    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:300px;margin-top:43px;">
      {% block page_content %}
      {% endblock %}
    <!-- End page content -->
    </div>
    <script src="/script/dashboard.js"></script>
  {% endblock %}
